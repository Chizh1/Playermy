<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="persistenceUnit">
        <mapping-file>src/playermy/entity/orm.xml</mapping-file>
        <class>entity.FilesEntity</class>
        <class>entity.FiletypesEntity</class>
        <class>entity.SettingsEntity</class>
        <class>entity.UsersEntity</class>
        <class>entity.UsersFilesEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/Player"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
